# Copy to .env and set values. Never commit .env.

# Required in production (use a random 64-char string)
SECRET_KEY=change-this-to-a-random-64-char-string

# Database (default: SQLite for development)
DATABASE_URL=sqlite:///./secure_collab.db

# Storage
UPLOAD_DIR=./uploads
MAX_UPLOAD_SIZE_MB=500

# CORS — add your frontend URL
ALLOWED_ORIGINS=["http://localhost:3000"]

# Computation limits
MAX_CONCURRENT_COMPUTATIONS=3

# Integrity
COMPUTE_CODEBASE_HASH_ON_STARTUP=true

# Blockchain anchoring (Phase 1 — leave empty for now)
POLYGON_RPC_URL=
POLYGON_PRIVATE_KEY=
